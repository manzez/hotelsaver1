# Copy to .env and fill in values

# Database
# Example (generic):
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public"

# Neon (recommended for serverless) â€” use a POOLED connection string
# Example (adjust host/user/password/db and keep sslmode if required):
# DATABASE_URL="postgresql://USER:PASSWORD@POOL-HOST:PORT/DB_NAME?sslmode=require"

# Admin API key used to secure admin endpoints
ADMIN_API_KEY="change-this-admin-key"

# Client-side admin key (for admin UI)
NEXT_PUBLIC_ADMIN_API_KEY="change-this-admin-key"

# NextAuth (if enabled)
NEXTAUTH_URL="http://localhost:3000" # set to https://app.yourdomain.com in production
NEXTAUTH_SECRET="replace-with-strong-secret"

# OAuth providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# Data source switch: json (default) or db
DATA_SOURCE="json"

# Google Places API (for apartment data download)
GOOGLE_PLACES_API_KEY="your_google_places_api_key_here"

# OpenAI Configuration for HotelSaver.ng GPT-4 Chatbot
OPENAI_API_KEY="your_openai_api_key_here"

# Optional: Set custom OpenAI organization ID
# OPENAI_ORG_ID="your_org_id_here"

# Chatbot Configuration
CHATBOT_MODEL="gpt-4-turbo-preview"
CHATBOT_MAX_TOKENS="800"
CHATBOT_TEMPERATURE="0.7"

# WhatsApp Business API (for future integration)
# WHATSAPP_BUSINESS_PHONE_ID="your_phone_id"
# WHATSAPP_ACCESS_TOKEN="your_access_token"
# WHATSAPP_WEBHOOK_VERIFY_TOKEN="your_verify_token"

# Paystack (payments)
# Server-side secret key used for initialize/verify API calls
PAYSTACK_SECRET_KEY="sk_test_xxx"

# Paystack public key for client-side initialization
PAYSTACK_PUBLIC_KEY="pk_test_xxx"

# Paystack webhook secret (set in Paystack dashboard and in Vercel env)
PAYSTACK_WEBHOOK_SECRET="whsec_xxx"

# Optional: Observability and rate limiting
SENTRY_DSN=""
# Optional: prefer public DSN for browser init (not required)
# NEXT_PUBLIC_SENTRY_DSN=""
REDIS_URL=""

# Notifications (Food orders)
# Webhook to notify another system of new food orders (optional)
FOOD_ORDER_WEBHOOK_URL=""

# Admin contact details for quick notifications
ADMIN_WHATSAPP=""         # e.g., 2347012345678 (no leading +)
ADMIN_EMAIL=""            # e.g., admin@example.com

# Email (Resend)
# Create at https://resend.com/ and paste your API key
RESEND_API_KEY=
# Optional: Webhook signing secret (set in Resend dashboard)
RESEND_WEBHOOK_SECRET=
# Default sender and admin recipients
EMAIL_FROM="HotelSaver.ng <no-reply@hotelsaver.ng>"
ADMIN_EMAIL=admin@hotelsaver.ng

# Preferred sender/inbox for booking emails (used by APIs)
BOOKINGS_FROM="bookings@hotelsaver.ng"
BOOKINGS_INBOX="admin@hotelsaver.ng"

# App base URL (used for activation/reset links)
APP_BASE_URL="http://localhost:3000"

# Public site base URL used in metadata and absolute links
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Google Analytics 4 (consent-gated)
NEXT_PUBLIC_GA_ID=""  # e.g., G-XXXXXXXX

# Public support email shown on Contact page
NEXT_PUBLIC_SUPPORT_EMAIL="support@hotelsaver.ng"

# Negotiation token signing secret (HMAC)
NEGOTIATION_SECRET="replace-with-strong-secret"

# WhatsApp Cloud API (optional notifications)
WHATSAPP_CLOUD_ACCESS_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""  # e.g., 123456789012345

# SendGrid (optional email notifications)
SENDGRID_API_KEY=""
