{
  "name": "hotelsaver-api-tests",
  "version": "1.0.0",
  "description": "API testing suite for HotelSaver.ng using Mocha",
  "scripts": {
    "test": "mocha --require ts-node/register \"**/*.test.ts\"",
    "test:api": "mocha --require ts-node/register \"api/**/*.test.ts\"",
    "test:watch": "mocha --require ts-node/register \"**/*.test.ts\" --watch",
    "test:coverage": "nyc mocha --require ts-node/register \"**/*.test.ts\"",
    "test:json": "mocha --require ts-node/register \"**/*.test.ts\" --reporter json --reporter-options output=../reports/api-results.json",
    "test:html": "mocha --require ts-node/register \"**/*.test.ts\" --reporter mochawesome --reporter-options reportDir=../reports/api-html,reportFilename=api-report",
    "test:spec": "mocha --require ts-node/register \"**/*.test.ts\" --reporter spec"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "chai": "^4.3.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}