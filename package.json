    "react-tailwindcss-datepicker": "^1.7.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.8.1",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.19",
