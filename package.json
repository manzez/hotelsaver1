{
  "name": "hotelsaver-ng-v9",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:lan": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start",
    "start:lan": "next start -H 0.0.0.0 -p 3000",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:migrate:auth": "prisma migrate dev --name nextauth-email",
    "db:deploy": "prisma migrate deploy",
    "db:deploy:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/db-seed.js",
    "db:seed:services": "node scripts/db-seed-services.js",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "download-apartments": "tsx scripts/download-apartments.ts",
    "fix-photos": "tsx scripts/fix-hotel-photos.ts",
    "db:smoke": "node scripts/db-smoke.js",
    "pack:design": "bash scripts/package-design-pack.sh",
    "availability:import": "echo 'Upload CSV to /api/admin/availability/import with x-admin-key header'",
    "update:prices": "node scripts/update-prices.js",
    "test": "cd tests && npx playwright test",
    "test:install": "cd tests && npx playwright install",
    "test:headed": "cd tests && npx playwright test --headed",
    "test:debug": "cd tests && npx playwright test --debug",
    "test:search": "cd tests && npx playwright test e2e/01-search-flow.spec.ts",
    "test:booking": "cd tests && npx playwright test e2e/02-negotiation-flow.spec.ts e2e/03-booking-flow.spec.ts",
    "test:api": "cd tests/api && npm test",
    "test:api:watch": "cd tests/api && npm run test:watch",
    "test:mobile": "cd tests && npx playwright test --project='Mobile Chrome'",
    "test:report": "cd tests && npx playwright show-report",
    "test:ui": "cd tests && npx playwright test --ui",
    "test:all": "npm run test:api && npm run test",
    "report": "cd tests && node quick-report.js",
    "report:full": "cd tests && node generate-report.js",
    "test:report:generate": "npm run report",
    "test:with:report": "npm run test:api && npm run report",
    "test:ci": "cd tests && npx playwright test --reporter=html --reporter=json:reports/ci-results.json",
    "test:regression": "npm run test:api && npm run test:ci",
    "build:test": "npm run build && npm start & sleep 10 && npm run test:regression; kill %1",
    "deploy:staging": "vercel",
    "deploy:production": "vercel --prod",
    "ci:setup": "npm ci && cd tests && npm ci && npx playwright install --with-deps",
    "ci:test:all": "npm run test:regression && npm run report:full",
    "seed:apartments": "node scripts/seed-apartments.js",
    "photos:collect:owerri:u80": "node scripts/collect-hotel-photos.js --city=Owerri --budget=u80",
    "photos:collect:all": "node scripts/collect-hotel-photos.js --city=ALL",
    "photos:audit": "node scripts/audit-hotel-photos.js",
    "photos:fill": "node scripts/fill-hotel-photos.js --min=3 --mode=prepend",
    "photos:update": "node scripts/update-hotel-photos.js scripts/output/hotel-photo-map.Owerri.u80.json --mode=replace"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.20.0",
    "@types/node-fetch": "^2.6.13",
    "next": "^14.2.33",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "react": "18.2.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "18.2.0",
    "react-tailwindcss-datepicker": "^1.7.3",
    "resend": "^4.0.0",
    "swagger-ui-dist": "^5.29.5",
    "swagger-ui-react": "^5.29.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.8.1",
    "@types/react": "18.2.66",
    "@types/swagger-ui-react": "^5.18.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.12.2",
    "chai": "^6.2.0",
    "dotenv": "^17.2.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.6",
    "mocha": "^11.7.4",
    "postcss": "^8.4.38",
    "prisma": "^5.20.0",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
